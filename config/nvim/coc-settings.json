{
  "suggest.noselect": true,
  "suggest.preferCompleteThanJumpPlaceholder": false,
  "signature.preferShownAbove": false,
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnTypeFiletypes": ["html", "cpp", "javascript"],
  "languageserver": {
    "bash":{
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash"],
      "ignoredRootPaths": ["~"]
    },
    "nimlsp": {
        "command": "nimlsp",
        "rootPatterns": ["*.nimble"],
        "filetypes": ["nim"],
        "trace.server": "verbose",
        "enable": true
    }
  },
  "snippets.priority": 5,
  "clangd.arguments": ["--background-index", "--header-insertion=never"],
  "sourcekit.commandPath": "/usr/local/bin/sourcekit-lsp",

  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": [
    "--max-line-length", "88"
  ]
}
