{
  "coc.preferences.jumpCommand": "tabe",
  "suggest.noselect": true,
  "suggest.preferCompleteThanJumpPlaceholder": false,
  "languageserver": {
    "bash":{
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash"],
      "ignoredRootPaths": ["~"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "nimlsp": {
        "command": "nimlsp",
        "rootPatterns": ["*.nimble"],
        "filetypes": ["nim"],
        "trace.server": "verbose",
        "enable": true
    }
  },
  "snippets.priority": 5,
  "clangd.arguments": ["--background-index", "--header-insertion=never"],
  "sourcekit.commandPath": "/usr/local/bin/sourcekit-lsp",

  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": [
    "--max-line-length", "127"
  ]
}
